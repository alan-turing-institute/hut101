---
const BASE = import.meta.env.BASE_URL;
// ordinarily we wouldn't need this, but there are some shenanigans with
// trailing slashes for the home page which I can't be bothered to figure out
// properly. So this is a bit of a hack but it works.
const PATHNAME = Astro.url.pathname.endsWith("/")
  ? Astro.url.pathname
  : `${Astro.url.pathname}/`;
const links = [
  { href: `${BASE}/`, label: "Home" },
  { href: `${BASE}/students/`, label: "For students" },
  { href: `${BASE}/reg/`, label: "For REG" },
  { href: `${BASE}/faq/`, label: "FAQ" },
];
---

<ul>
  {
    links.map((link) => (
      <li>
        {PATHNAME === link.href ? (
          <span class="active">{link.label}</span>
        ) : (
          <a href={link.href}>{link.label}</a>
        )}
      </li>
    ))
  }
</ul>

<style>
  ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  li {
    display: inline;
    margin-right: 35px;
  }

  span.active {
    font-weight: bold;
  }

  a {
    text-decoration: none;
    color: #007acc;

    transition: color 0.3s;
  }

  a:hover {
    color: #005f99;
    text-decoration: underline;
  }
</style>
