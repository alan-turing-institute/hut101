---
import "./main.css";
import Navigation from "./Navigation.astro";
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>hut101 | {frontmatter.title}</title>
  </head>
  <body>
    <main>
      <span class="top">
        <h1>hut101</h1>
        <Navigation />
      </span>
      <span class="content">
        <slot />
      </span>
    </main>
  </body>
</html>

<style>
  body {
    margin: 0 50px;
    background-color: #eae7de;
  }
  main {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    background-color: #ddd9ce;
    border: 3px solid #bab19a;
  }
  span.top {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 20px 40px 20px;
    border-bottom: 3px solid #bab19a;
  }
  /* All CSS styles for the Markdown itself go here */
  span.content {
    padding: 40px 20px 40px 20px;
    :first-child {
      margin-top: 0;
    }
    h2 {
      margin-top: 2rem;
    }
    ol,
    ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
