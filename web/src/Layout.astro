---
import "./main.css";
import Navigation from "./Navigation.astro";
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>hut101 | {frontmatter.title}</title>
  </head>
  <body>
    <main>
      <span class="top">
        <h1>hut101</h1>
        <Navigation />
      </span>
      <span class="content">
        <slot />
      </span>
    </main>
  </body>
</html>

<style>
  :root {
    --lightest: #f1f0ff;
    --light: #dedcef;
    --medium: #5b5f80;
  }

  body {
    margin: 0 50px;
    background-color: var(--lightest);
  }
  main {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    background-color: var(--light);
    border: 3px solid var(--medium);
  }
  span.top {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 20px 40px 20px;
    border-bottom: 3px solid var(--medium);
  }
  /* All CSS styles for the Markdown itself go here */
  span.content {
    padding: 40px 20px 40px 20px;
    :first-child {
      margin-top: 0;
    }
    h2 {
      margin-top: 2rem;
    }
    ol {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      list-style: none;
      counter-reset: num;
      padding: 15px 20px 5px 20px;

      li {
        width: 100%;
        border: 2px solid var(--medium);
        border-radius: 10px;
        padding: 10px 20px;
        counter-increment: num;
        position: relative;

        :last-child {
          margin-bottom: 0;
        }
      }
      li::before {
        /* I won't lie, I was going to look for some CSS online to steal, but
         * Copilot wrote this. I suppose it just automated the stealing bit.
         * This is a bit scary, to be honest. */
        content: counter(num);
        position: absolute;
        font-size: 120%;
        top: -20px;
        left: -20px;
        background-color: var(--medium);
        color: var(--light);
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
      }
    }
    ul {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
